{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // Path alias config
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@src/*": ["./*"],
      "@screens/*": ["./screens/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./shared/utils/*"],
      "@hooks/*": ["./shared/hooks/*"],
      "@store/*": ["./store/*"],
      "@slices/*": ["./store/slices/*"],
      "@contexts": ["./shared/contexts/*"],
      "@types/*": ["./types/*"],
      "@assets/*": ["./assets/*"],
      "@images/*": ["./assets/images/*"],
      "@navigator/*": ["./navigator/*"],
      "@constant/*": ["./shared/constant/*"],
      "@theme/*": ["./theme/*"]
    }
  }
}
